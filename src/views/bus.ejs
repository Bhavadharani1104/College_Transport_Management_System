<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bus Route</title>
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/college.jpg');
            background-size: cover;
            background-position: center;
            filter: blur(8px);
            z-index: -1;
            opacity: 0.8;
        }

        .bus-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 600px;
            max-width: 90%;
        }

        h1 {
            text-align: center;
        }

        .details {
            margin-bottom: 20px;
        }

        .seat-availability {
            font-size: 1.2em;
            color: green;
        }

        .route {
            cursor: pointer;
            color: blue;
            text-decoration: underline;
        }

        .stops {
            display: none; /* Initially hidden */
            margin-left: 20px;
            font-size: 0.9em;
        }

        .buttons {
            text-align: center;
        }

        button {
            padding: 10px 20px;
            margin: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            color: white;
            background-color: #28a745;
        }

        button.payment {
            background-color: #007bff;
        }

        .stops ul {
            list-style-type: none; /* Remove default list styling */
            padding: 0; /* Remove padding */
        }

        .stops li {
            margin: 5px 0; /* Space between each stop */
        }
    </style>

</head>

<body>
    <div class="bus-container">
        <h1>Bus Route: <%= busRoute %></h1>

        <div class="details">
            <p>Bus Number: <strong><%= busNumber %></strong></p>
            <p class="seat-availability">Seats Available: <%= seatsAvailable %> / 60</p>
            <p>
                Source - Destination: 
                <span>
                    <%= source %> to <%= destination %>
                </span>
            </p>
            

        <div class="buttons">
            <a href="/track-bus">
                <button type="button">Track Bus</button>
            </a>
            <a href="/payment">
                <button type="button" class="payment">Payment</button>
            </a>
        </div>
        <div class="map-container" id="map" style="height: 400px; margin-top: 20px;"></div>
    </div>

    <script>
        // Initialize the map
        function initMap() {
            const busLocation = [9.8821, 78.0816]; // Replace with your bus's latitude and longitude
            const map = L.map('map').setView(busLocation, 13);

            // Add OpenStreetMap tiles
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: 'Â© OpenStreetMap'
            }).addTo(map);

            // Define custom icon using Icons8
            const customIcon = L.icon({
                iconUrl: 'https://img.icons8.com/color/48/000000/marker.png',
                iconSize: [30, 30],
                iconAnchor: [15, 30],
                popupAnchor: [1, -34]
            });

            // Add a marker for the bus's current location
            L.marker(busLocation, { icon: customIcon }).addTo(map)
                .bindPopup('Current Location of Bus ' + '<%= busNumber %>') // Popup showing the bus number
                .openPopup();
        }

        // Call initMap after the page loads
        window.onload = initMap;
    </script>
</body>


</html>
